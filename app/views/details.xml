<Alloy>
	<NavigationWindow id="navwin">
		<Window title="L(details_title)" layout="vertical" id="win" onClose="doClose">
			<LeftNavButton platform="ios">
				<Button title="L(back_button)" onClick="doClickBack" />
			</LeftNavButton>
			<View>
				<View layout="vertical">
					<Label id="title" />
					<ImageView id="image" />
					<Label id="subtitle" />
					<Label id="url" />
					<Label id="email" />
					<Label id="phone" />
					<Label id="street1" />
					<Label id="street2" />
					<View layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
						<Label id="postal_code" /><Label left="4" id="city" />
					</View>
				</View>
			</View>
		</Window>
	</NavigationWindow>
</Alloy>