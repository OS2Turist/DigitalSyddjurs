<Alloy>
	<NavigationWindow id="navwin">
		<Window title="L(details_title)" layout="vertical" id="win" onClose="doClose">
			<LeftNavButton platform="ios">
				<Button title="L(back_button)" onClick="doClickBack" />
			</LeftNavButton>
			<ScrollView>
			<View>
				<View id="maincontainer" layout="vertical">
					<View layout="vertical" height="Ti.UI.SIZE">
						<Label id="title" width="60%" />	
						<ImageView id="image" class="detailimg" />
					</View>
				</View>
			</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>