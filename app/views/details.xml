<Alloy>
	<NavigationWindow id="navwin">
		<Window title="L(details_title)" layout="vertical" id="win" onClose="doClose">
			<LeftNavButton platform="ios">
				<Button title="L(back_button)" onClick="doClickBack" />
			</LeftNavButton>
			<ScrollView>
			<View>
				<View layout="vertical">
					<View layout="vertical" height="Ti.UI.SIZE">
						<Label id="title" width="60%" />	
						<ImageView id="image" width="40%" />
					</View>
					<View layout="vertical" top="5" height="Ti.UI.SIZE">
						<Label id="subtitle" />
						<Label id="description" />
						<Label id="url" />
						<Label id="email" />
						<Label id="phone" />
						<Label id="street1" />
						<Label id="street2" />
						<View layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
							<Label id="postal_code" /><Label left="4" id="city" />
						</View>
					</View>					
				</View>
			</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>