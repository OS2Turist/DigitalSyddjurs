<Alloy>
	<NavigationWindow id="navwin">
		<Window title="L(details_title)" layout="vertical" id="win" onClose="doClose">
			<LeftNavButton platform="ios">
				<Button title="L(back_button)" onClick="doClickBack" />
			</LeftNavButton>
			<ScrollView layout="vertical">
				<View layout="vertical" width="100%" height="Ti.UI.SIZE">
					<View layout="vertical" top="12" width="96%" height="Ti.UI.SIZE">
						<View id="fb_button_view" width="100%" right="0" height="Ti.UI.SIZE" />
						<View layout="vertical" left="0" width="100%" height="Ti.UI.SIZE">
							<Label id="title" left="0" />
							<Label id="adresse" left="0" />
						</View>
					</View>
					<View height="Ti.UI.SIZE" top="12" width="96%">
						<Label id="description" height="Ti.UI.SIZE" width="100%" />
					</View>
					<View top="12" width="96%" height="Ti.UI.SIZE">
						<Button id="favourite" left="0" width="49%" class="actionbutton" onClick="doToggleFavourite" />
						<Button id="phone" autoLink="true" right="0" width="49%" class="phonebutton" onClick="doDialUp" />
					</View>
					<View layout="vertical" top="12" width="96%" height="Ti.UI.SIZE">
						<Button class="buttonlightgrey" onClick="doFindRoute" title="L('findroute')" />
					</View>
					<View layout="vertical" top="12" width="96%" height="Ti.UI.SIZE">
						<Button class="buttongreen" onClick="doBuyTicket">KÃ¸b entre</Button>>
					</View>
					<View layout="vertical" top="12" bottom="32" width="100%" height="Ti.UI.SIZE">
						<ImageView id="mainImage" width="100%" />
					</View>
				</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>