<Alloy>
	<Collection src="Arrangement" />
	<Window id="win" title="L('hometitle')" onClose="cleanup">
		<RightNavButton>
			<Button id="menubutton" image="Menu.png" />
		</RightNavButton>>
		<View class="topcontainer" height="Ti.UI.FILL">
			<View id="bubblescontainer" dataCollection="Arrangement" dataFilter="rangeFilter" dataTransform="transformData" height="Ti.UI.FILL" width="Ti.UI.FILL" bottom="15%">
				<ImageView modelid="{id}" image="{imageuri}" top="{top}" left="{left}" width="{width}" height="{height}" borderRadius="{radius}" onClick="doClickBubble" />	
			</View>
			<View top="85%" layout="vertical" left="5%" width="90%">
				<Label id="lblKmSetting" right="0" text="4 KM"/>
				<Slider id="sldKmSetting" min="1" max="20" width="100%" value="4" onStop="doChangeKm" />
			</View>
		</View>
		<Require id="settingsmenu" src="settingsview" />
	</Window>
</Alloy>