<Alloy>
	<Window id="win" title="L('hometitle')" onClose="cleanup">
		<RightNavButton>
			<Button id="menubutton" image="/tabicons/options.png" />
		</RightNavButton>>
		<View class="topcontainer" height="Ti.UI.FILL">
			<ScrollView contentWidth="auto" contentHeight="auto" maxZoomScale="100" minZoomScale="0.1" zoomScale="1">
				<View id="bubblescontainer" height="Ti.UI.FILL" width="Ti.UI.FILL" bottom="15%" />
			</ScrollView>
			<View top="85%" layout="vertical" left="5%" width="90%">
				<Label id="lblKmSetting" right="0" text="30 KM"/>
				<Slider id="sldKmSetting" min="1" max="200" width="100%" value="30" onChange="doChangeKm" />
			</View>
		</View>
		<Require id="settingsmenu" src="settingsview" />
	</Window>
</Alloy>