<Alloy>
	<Collection src="Arrangement" /> 
	<Window title="L('listtitle')" id="win">
		<RightNavButton>
			<Button id="menubutton" image="/tabicons/options.png" />
		</RightNavButton>>
		<ScrollView layout="vertical" height="Ti.UI.FILL" width="Ti.UI.FILL">
			<ListView id="lvEvents" defaultItemTemplate="template" onItemclick="doItemclick">
				<Templates>
					<ItemTemplate name="template">
						<View layout="horizontal" left="2" right="2" top="1" bottom="1" height="Ti.UI.SIZE" width="Ti.UI.FILL" bindId="rowView">
							<ImageView bindId="arrimage" top="2" id="arrimage" width="40" height="40" borderRadius="20" />
							<View layout="vertical" width="60%" height="50">
								<Label bindId="title" left="2" id="title" />
							</View>
							<View width="20%" height="50">
								<Label bindId="distance" left="2" id="distance"/>
							</View>
						</View>
					</ItemTemplate>
				</Templates>
				<ListSection dataCollection="Arrangement" dataTransform="formatData" dataFilter="languageFilter">
					<ListItem itemId="{id}" template="{template}" arrimage:image="{image_thumbnail_uri}" title:text="{title}" distance:text="{distanceString}" accessoryType="Titanium.UI.LIST_ACCESSORY_TYPE_DETAIL"/>
				</ListSection>
<!--
				<PullView>
					<View>
						<Label>Hj√¶lpe tekst her, eller 'release to update'?</Label>
					</View>
				</PullView>
-->				
			</ListView>		
		</ScrollView>
		<Require id="settingsmenu" src="settingsview" />
	</Window>
</Alloy>